require 'rubygems'
require 'aws/s3'

connection = AWS::S3::Base.establish_connection!(
  :access_key_id     => 'AKIAISZJ7YPZRSTF6LQQ',
  :secret_access_key => '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'
)

count = 0;
marker = ARGV[0] ||= '';
loop do
    objects = AWS::S3::Bucket.objects("/aol-kitchendaily-test-assets/", :marker=>marker, :max_keys=>1000)
    break if objects.size == 0
    marker = objects.last.key
      
    objects.each do |file|
        begin
          p count.to_s << ". checking " << file.key
          if (!file.metadata['Cache-Control'] && file.key != '/')
            p count.to_s << ". updating " << file.key
            file.metadata['Cache-Control'] = 'max-age=86400'
            grant = ACL::Grant.grant :public_read
            file.acl.grants << grant
            file.acl(file.acl)
            file.save
          else
            p count.to_s << ". skipping " << file.key
          end
        rescue
          next
        end
        count+=1
    end
end